{
  "rules": {
    ".read": true,
    ".write": false,
    "Team": {
      "$id": {
        "name": {
          ".write": "data.parent().child('leader').val() === auth.uid"
        },
        "members": {
          ".write": "data.parent().child('leader').val() === auth.uid"
        },
        "added": {
          ".write": "data.parent().child('leader').val() === auth.uid"
        }
      }
    },
    "User": {
      "$uid": {
        "username": {
          ".write": "$uid === auth.uid"
        },
        "team": {
          ".write": "$uid === auth.uid"
        }
      },
      ".indexOn": ["lastAtHomeTime"]
    }
  }
}
